@page
@model CrimeManagementSystem.Pages.Crimes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Crime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Crime.CrimeType" class="control-label"></label>
                <input asp-for="Crime.CrimeType" class="form-control" />
                <span asp-validation-for="Crime.CrimeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.Description" class="control-label"></label>
                <input asp-for="Crime.Description" class="form-control" />
                <span asp-validation-for="Crime.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.CrimeDate" class="control-label"></label>
                <input asp-for="Crime.CrimeDate" class="form-control" />
                <span asp-validation-for="Crime.CrimeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.CrimeLocation" class="control-label"></label>
                <input asp-for="Crime.CrimeLocation" class="form-control" />
                <span asp-validation-for="Crime.CrimeLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.CrimeStatus" class="control-label"></label>
                <input asp-for="Crime.CrimeStatus" class="form-control" />
                <span asp-validation-for="Crime.CrimeStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.CrimeRegistrationDate" class="control-label"></label>
                <input asp-for="Crime.CrimeRegistrationDate" class="form-control" />
                <span asp-validation-for="Crime.CrimeRegistrationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Crime.HasEvidence" /> @Html.DisplayNameFor(model => model.Crime.HasEvidence))
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Crime.Priority" class="control-label"></label>
                <input asp-for="Crime.Priority" class="form-control" />
                <span asp-validation-for="Crime.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.VictimId" class="control-label"></label>
                <select asp-for="Crime.VictimId" class ="form-control" asp-items="ViewBag.VictimId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Crime.CriminalId" class="control-label"></label>
                <select asp-for="Crime.CriminalId" class ="form-control" asp-items="ViewBag.CriminalId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Crime.OfficerId" class="control-label"></label>
                <select asp-for="Crime.OfficerId" class ="form-control" asp-items="ViewBag.OfficerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
