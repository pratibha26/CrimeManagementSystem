@page
@model UpdateCriminalRecordModel
@{
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post" style="margin-top: 50px;">
                            
                <input type="hidden" asp-for="UpdateCriminalRecordForm.CrimeId" />
                <div class="form-group">
                    <label asp-for="UpdateCriminalRecordForm.Description" class="control-label"></label>
                    <input asp-for="UpdateCriminalRecordForm.Description" value="@Model.Crime.Description" class="form-control" />
                    <span asp-validation-for="UpdateCriminalRecordForm.Description" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="UpdateCriminalRecordForm.CrimeStatus" class="control-label">Crime Status</label>
                    <div>
                        <select name="UpdateCriminalRecordForm.CrimeStatus" class = "form-control">
                        <option value="Open" selected>Open</option>
                        <option value="UnderReview">Under Review</option>
                        <option value="Pending">Pending</option>
                        <option value="InvestigationCompleted">Investigation Completed</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="UpdateCriminalRecordForm.CriminalId" class="control-label">Criminal Name</label>
                    <select asp-for="UpdateCriminalRecordForm.CriminalId" class ="form-control" asp-items="ViewBag.CriminalId" required><option selected="selected">@Model.Crime.Criminal.Name</option></select>
                </div>
                <br><br>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-danger" />
                </div>
        </form>
    </div>
</div>